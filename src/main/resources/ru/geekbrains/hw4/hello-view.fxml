<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox stylesheets="css/style.css" alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.geekbrains.hw4.Controller">
    <MenuBar style="-fx-background-color:LightSkyBlue; -fx-text-fill: black">
        <Menu text="File">
            <MenuItem text="Open" />
            <MenuItem text="Save" />
            <MenuItem fx:id="close" onAction="#clickClose" text="Close" />
        </Menu>
    </MenuBar>
    <TextArea fx:id="mainTextArea" prefWidth="300" style="-fx-background-color:PaleGreen; -fx-text-fill: black" VBox.vgrow="ALWAYS">
        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
        </padding></TextArea>
    <HBox alignment="TOP_CENTER">
        <TextField   fx:id="textField" alignment="CENTER" onAction="#clickBtnSendText" prefWidth="300" style="-fx-background-color:SpringGreen; -fx-text-fill: black">
         <padding>
            <Insets bottom="10.0" />
         </padding>
         <HBox.margin>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </HBox.margin></TextField>
        <Button alignment="CENTER_RIGHT" onAction="#clickBtnSendText" style="-fx-background-color:PowderBlue; -fx-text-fill: black" text="Send text">
         <font>
            <Font size="11.0" />
         </font>
         <HBox.margin>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </HBox.margin>
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding></Button>
        <Button fx:id="btn23" alignment="BOTTOM_RIGHT" opacity="0.15" text="Закрыть" />

    </HBox>
</VBox>
